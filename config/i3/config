exec --no-startup-id blueman-tray # bluetooth
exec --no-startup-id nm-applet # network-manager
exec --no-startup-id pasystray # pulseaudio
exec --no-startup-id redshift-gtk # blue light killer
exec --no-startup-id xss-lock -- i3lock -c '#000000'
#exec --no-startup-id pamac-tray
#exec --no-startup-id clipit
exec --no-startup-id copyq # clipboard manager
